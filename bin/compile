#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

echo "-----> Installing cmake"

TARBALL_URL="https://s3.amazonaws.com/crystalvista/devtools/cmake.tar.gz"
TARGET_DIR="/tmp/codon/vendor"

# download and unpack
mkdir -p "$TARGET_DIR"
cd       "$TARGET_DIR"
curl --fail --retry 3 --retry-delay 1 --connect-timeout 3 "$TARBALL_URL" -s -o - | tar zxf -

cd ./bin
echo '       Installed: '`ls c*`
echo '       PATH: '"$PATH"
echo
