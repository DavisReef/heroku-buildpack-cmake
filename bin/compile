#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

echo "-----> Installing cmake"

# change to BUILD_DIR
cd "$1"

# download
curl https://s3.amazonaws.com/crystalvista/devtools/cmake.tar.gz -s -O

# unpack binaries
mkdir -p /tmp/codon/vendor
tar -C /tmp/codon/vendor -xzf cmake.tar.gz
rm -rf cmake.tar.gz

cd /tmp/codon/vendor/bin
echo '       Installed: '`ls c*`
echo '       PATH: '"$PATH"
echo
